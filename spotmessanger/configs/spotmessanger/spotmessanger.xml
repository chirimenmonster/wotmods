
<!-- SpotMessanger by Pleiadi -->
<!-- Configuration by Kaeptn -->
 
<config.xml>

    <Debug>true</Debug>

    <!-- Activation options -->
    <ActiveByDefault>true</ActiveByDefault> <!-- Activate Mod at the beginning of the battle - true/false. -->
    <ActivationHotKey>KEY_F11</ActivationHotKey> <!-- Set the hotkey to enable/disable the Mod during battle. -->
    <ReloadConfigKey>KEY_NUMPAD4</ReloadConfigKey> <!-- Press this hotkey to reload configuration. -->

    <!-- Message options -->	
    <ImSpotted>An enemy has spotted me at {pos}.</ImSpotted>
    <DisableSystemMsg>Sixth Sense Message disabled</DisableSystemMsg>
    <EnableSystemMsg>Sixth Sense Message enabled</EnableSystemMsg>

    <CooldownInterval>60</CooldownInterval>
    <CooldownMsg>Sixth Sense Message cooldown, rest {rest} sec.</CooldownMsg>
 
    <TextDelay>0.5</TextDelay>
    <CommandDelay>5</CommandDelay>

    <BattleTypeParameterList>

        <BattleTypeParameter>
            <!-- List for assign battle types -->
            <!-- BattleType may default/Random/Training/Company/TeamBattle/Fortifications/ProvingGround/Fallout -->
            <AssignBattleType>
                <BattleType>default</BattleType>
            </AssignBattleType>
            <!-- Order of commands -->
            <!-- Command may ping/help/teammsg/squadmsg -->
            <CommandOrder>
                <Command>ping</Command> <!-- Ping the minimap square you are in when the perk activates. -->
                <Command>help</Command> <!-- Send "Help!" quick command (F7) when the perk activates. -->
                <Command>teammsg</Command> <!-- Send Message to team chat. -->
            </CommandOrder>
            <MaxTeamAmount>0</MaxTeamAmount>
            <!-- Tank filters -->
            <VehicleTypes>
                <LT>true</LT> <!-- Send message when driving a light tank - true/false. -->
                <MT>true</MT> <!-- Send message when driving a medium tank - true/false. -->
                <HT>true</HT> <!-- Send message when driving a heavy tank - true/false. -->
                <TD>true</TD> <!-- Send message when driving a tank destroyer - true/false. -->
                <SPG>true</SPG> <!-- Send message when driving artillery - true/false. -->
            </VehicleTypes>
            <CooldownInterval>60</CooldownInterval>
            <TextDelay>0.5</TextDelay>
            <CommandDelay>5</CommandDelay>
        </BattleTypeParameter>

        <!-- for Random Battle -->
        <BattleTypeParameter>
            <AssignBattleType>
                <BattleType>Random</BattleType>
            </AssignBattleType>
            <CommandOrder>
                <Command>squadmsg</Command>  <!-- Send Message to platoon chat. -->
            </CommandOrder>
            <MaxTeamAmount>0</MaxTeamAmount>
            <VehicleTypes>
                <LT>true</LT>
                <MT>true</MT>
                <HT>true</HT>
				<TD>true</TD>
                <SPG>true</SPG>
            </VehicleTypes>
            <CooldownInterval>60</CooldownInterval>
            <TextDelay>0.5</TextDelay>
            <CommandDelay>5</CommandDelay>
        </BattleTypeParameter>

        <!-- for Clan Battle -->
        <BattleTypeParameter>
            <AssignBattleType>
                <BattleType>GlobalMap</BattleType>
                <BattleType>Fortifications</BattleType>
            </AssignBattleType>
            <CommandOrder>
                <Command>help</Command>
                <Command>teammsg</Command>
            </CommandOrder>
            <MaxTeamAmount>0</MaxTeamAmount>
            <VehicleTypes>
                <LT>true</LT>
                <MT>true</MT>
                <HT>true</HT>
				<TD>true</TD>
                <SPG>true</SPG>
            </VehicleTypes>
            <CooldownInterval>60</CooldownInterval>
            <TextDelay>0.5</TextDelay>
            <CommandDelay>5</CommandDelay>
        </BattleTypeParameter>

    </BattleTypeParameterList>
    
</config.xml>
