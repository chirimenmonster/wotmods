{
    "package":  "${package}",
    "files":    [
        {
            "method":   "apply",
            "source":   [ "meta.in.xml" ]
        },
        {
            "method":   "python",
            "root":     "res",
            "include":  "\\.py$$",
            "exclude":  "\\.in\\.py$$",
            "srcdir":    [ "src" ]
        },
        {
            "method":   "apply+python",
            "root":     "res",
            "include":  "\\.in\\.py$$",
            "srcdir":   [ "src" ]
        }
    ]
}
